<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <include
        android:id="@+id/header"
        layout="@layout/item_header"/>

    <androidx.core.widget.NestedScrollView
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">

        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue, 23/08/21"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/productsans_medium"/>

            <RelativeLayout
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/card_current_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/bg_card_blue"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/text_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25Â°"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="90sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/productsans_regular"/>

                <TextView
                    android:id="@+id/text_info"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/text_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clouds &amp; Sun"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/productsans_light"/>

                <TextView
                    android:layout_below="@id/text_info"
                    android:id="@+id/title_humidity"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/productsans_bold"/>

                <TextView
                    android:layout_below="@id/title_humidity"
                    android:id="@+id/text_humidity"
                    android:layout_marginBottom="30dp"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:text="90%"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/productsans_bold"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_title_forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Next 7 days"
                android:gravity="center"
                android:layout_gravity="start"
                android:textSize="@dimen/text_title_size"
                android:fontFamily="@font/productsans_bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/list_forecast"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>